<Window x:Class="Filebuloso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Filebuloso"
        mc:Ignorable="d"
        Title="Filebuloso" Height="600" Width="800" MinHeight="600" MinWidth="800"
        Icon="Resources/icon.ico">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image Source="Resources/logo.png"
                   Width="36"
                   Height="36"
                   Stretch="Uniform"
                   Margin="0,0,12,0"/>
            <TextBlock Grid.Column="1" Text="Directory" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBox x:Name="DirectoryTextBox"
                     Grid.Column="2"
                     MinWidth="420"
                     VerticalAlignment="Center"
                     TextChanged="DirectoryTextBox_TextChanged"/>
            <Button x:Name="BrowseButton"
                    Grid.Column="3"
                    Content="Browse..."
                    Margin="12,0,0,0"
                    Padding="12,4"
                    Click="BrowseButton_Click"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
            <Button x:Name="StartButton"
                    Content="Start Organization"
                    Padding="12,6"
                    IsEnabled="False"
                    Click="StartButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Margin="12,0,0,0"
                    Padding="12,6"
                    IsEnabled="False"
                    Click="CancelButton_Click"/>
            <Button Content="Configure Categories"
                    Margin="12,0,0,0"
                    Padding="12,6"
                    Click="ConfigureCategoriesButton_Click"/>
            <Button Content="Settings"
                    Margin="12,0,0,0"
                    Padding="12,6"
                    Click="SettingsButton_Click"/>
            <Button Content="Exit"
                    Margin="12,0,0,0"
                    Padding="12,6"
                    Click="ExitButton_Click"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ProgressBar x:Name="ProgressBar"
                         Height="20"
                         Minimum="0"
                         Maximum="100"/>
            <TextBlock x:Name="StatusText"
                       Grid.Column="1"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Text="Ready"/>
        </Grid>

        <RichTextBox x:Name="LogTextBox"
                     Grid.Row="3"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="1"
                     IsDocumentEnabled="False"
                     FontSize="15">
            <FlowDocument>
                <Paragraph>
                    Filebuloso helps organize downloads by removing duplicates and sorting files into categories.
                </Paragraph>
                <Paragraph>
                    <Bold>Quick start</Bold>
                </Paragraph>
                <Paragraph>1. Choose the folder to organize.</Paragraph>
                <Paragraph>2. Click Start Organization.</Paragraph>
                <Paragraph>3. Confirm to start, click OK.</Paragraph>
                <Paragraph>4. Review summary when complete.</Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
