<Window x:Class="Filebuloso.Views.CategoryEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configure Categories" Height="480" Width="640" MinHeight="480" MinWidth="640"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="CategoriesGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Extensions" Binding="{Binding Extensions}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Add" Width="90" Margin="0,0,12,0" Click="AddButton_Click"/>
            <Button Content="Edit" Width="90" Margin="0,0,12,0" Click="EditButton_Click"/>
            <Button Content="Delete" Width="90" Margin="0,0,12,0" Click="DeleteButton_Click"/>
            <Button Content="Reset to Defaults" Width="140" Margin="0,0,12,0" Click="ResetButton_Click"/>
            <Button Content="Close" Width="90" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
